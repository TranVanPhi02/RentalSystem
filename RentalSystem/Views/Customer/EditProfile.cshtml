@model RentalSystem.Models.Customer
@{
    ViewData["Title"] = "Edit Profile| Rental";
    Layout = "CustomerLayout";
}
@if (ViewBag.IsLogin == true)
{
    <partial name="/Views/Shared/HeaderCustomer.cshtml" />
}
else
{
    <partial name="/Views/Shared/HeaderGuest.cshtml" />
}
<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">My Account</a></li>
            <li class="breadcrumb-item active">Edit Profile</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Edit Profile Start -->
<div class="my-account">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                    <a class="nav-link" data-toggle="pill" href="#account-tab" role="tab"><i class="fa fa-user"></i>Manage Account</a>
                    <a class="nav-link" data-toggle="pill" href="#orders-tab" role="tab"><i class="fa fa-shopping-bag"></i>Orders</a>
                    <a class="nav-link" href="index.html"><i class="fa fa-sign-out-alt"></i>Logout</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="account-tab" role="tabpanel" aria-labelledby="account-nav">
                        <h4>Edit Account Details</h4>
                        <form method="post" action="/customer/profile/edit" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <input class="form-control" type="text" name="FullName" value="@Model.FullName" />
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" name="PhoneNumber" value="@Model.PhoneNumber" />
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="email" name="Email" value="@Model.Email" />
                                </div>
                              
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Edit Profile End -->
